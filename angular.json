{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "util": {
            "projectType": "library",
            "root": "projects/util",
            "sourceRoot": "projects/util/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/util/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/util/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/util/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/util/tsconfig.spec.json",
                        "polyfills": [
                            "zone.js",
                            "zone.js/testing"
                        ]
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "eslintConfig": "eslint.config.js",
                        "lintFilePatterns": [
                            "projects/util/src/**/*.ts",
                            "projects/util/src/**/*.html"
                        ]
                    }
                },
                "storybook": {
                    "builder": "@storybook/angular:start-storybook",
                    "options": {
                        "configDir": "projects/util/.storybook",
                        "browserTarget": "util:build",
                        "compodoc": false,
                        "port": 6006,
                        "styles": [
                            "projects/util/src/lib/ui-kit/styles/styles.scss"
                        ]
                    }
                },
                "build-storybook": {
                    "builder": "@storybook/angular:build-storybook",
                    "options": {
                        "configDir": "projects/util/.storybook",
                        "browserTarget": "util:build",
                        "compodoc": false,
                        "outputDir": "storybook-static",
                        "styles": [
                            "projects/util/src/lib/ui-kit/styles/styles.scss"
                        ]
                    }
                }
            }
        }
    },
    "cli": {
        "analytics": false
    }
}
