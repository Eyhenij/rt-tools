{
    "name": "@rt/tools",
    "version": "0.0.12",
    "type": "module",
    "scripts": {
        "ng": "ng",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint",
        "prettier": "npx prettier --write ./projects/tools",
        "packagr:tools": "ng-packagr -p ./projects/tools/ng-package.json && cd ./dist/tools && npm pack && npm publish",
        "storybook": "ng run @rt/tools:storybook",
        "build-storybook": "ng run @rt/tools:build-storybook",
        "changelog:tools": "conventional-changelog -p angular -i projects/tools/CHANGELOG.md -s -k projects/tools/package.json",
        "prepare": "husky",
        "postinstall": "rimraf .angular",
        "preinstall": "npx only-allow pnpm"
    },
    "private": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/Eyhenij/rt-tools"
    },
    "keywords": [
        "Angular",
        "Tools",
        "UI-Kit",
        "Utils"
    ],
    "license": "MIT",
    "workspaces": [
        "projects/tools"
    ],
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.0.4",
        "@angular-eslint/builder": "^19.0.1",
        "@angular-eslint/eslint-plugin": "^19.0.1",
        "@angular-eslint/eslint-plugin-template": "^19.0.1",
        "@angular-eslint/schematics": "^19.0.1",
        "@angular-eslint/template-parser": "^19.0.1",
        "@angular/animations": "^19.0.3",
        "@angular/cdk": "^19.0.2",
        "@angular/cli": "^19.0.4",
        "@angular/common": "^19.0.3",
        "@angular/compiler": "^19.0.3",
        "@angular/compiler-cli": "^19.0.3",
        "@angular/core": "^19.0.3",
        "@angular/forms": "^19.0.3",
        "@angular/material": "^19.0.2",
        "@angular/platform-browser": "^19.0.3",
        "@angular/platform-browser-dynamic": "^19.0.3",
        "@angular/router": "^19.0.3",
        "@chromatic-com/storybook": "^3.2.2",
        "@commitlint/cli": "^19.6.0",
        "@commitlint/config-angular": "^19.6.0",
        "@commitlint/config-conventional": "^19.6.0",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.16.0",
        "@faker-js/faker": "^9.3.0",
        "@storybook/addon-essentials": "^8.4.7",
        "@storybook/addon-interactions": "^8.4.7",
        "@storybook/addon-links": "^8.4.7",
        "@storybook/angular": "^8.4.7",
        "@storybook/blocks": "^8.4.7",
        "@storybook/test": "^8.4.7",
        "@types/node": "^22.10.1",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "conventional-changelog-cli": "^5.0.0",
        "date-fns": "^4.1.0",
        "dayjs": "^1.11.13",
        "eslint": "~8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-html": "^8.1.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-rxjs": "^5.0.3",
        "eslint-plugin-rxjs-angular": "^2.0.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^15.13.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "ng-packagr": "^19.0.1",
        "prettier": "^3.4.2",
        "prettier-eslint": "^16.3.0",
        "prettier-plugin-organize-attributes": "^1.0.0",
        "prettier-stylelint": "^0.4.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.1",
        "storybook": "^8.4.7",
        "stylelint": "^16.11.0",
        "stylelint-config-idiomatic-order": "^10.0.0",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-prettier": "^5.0.2",
        "stylelint-scss": "^6.10.0",
        "tslib": "^2.8.1",
        "typescript": "~5.6.2",
        "zone.js": "^0.15.0"
    },
    "lint-staged": {
        "**/src/**/*.{js,ts}": "eslint --fix",
        "**/src/**/*.{js,ts,json,mdx,md,html,scss,css}": "prettier . --write"
    },
    "dependencies": {
        "@floating-ui/dom": "^1.6.12",
        "ngx-image-cropper": "^9.0.0"
    },
    "engines": {
        "node": ">=22.12.0"
    }
}
