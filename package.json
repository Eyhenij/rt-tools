{
  "name": "@rt/tools",
  "version": "0.0.13",
  "type": "module",
  "scripts": {
    "ng": "nx",
    "build:tools": "rimraf dist/tools && nx build @rt/tools",
    "watch": "nx build --watch --configuration development",
    "test": "pnpx nx run-many -t test",
    "lint": "pnpx nx run-many --target=lint --all",
    "prettier": "npx prettier --write ./projects/tools",
    "check:all": "pnpm exec nx run-many -t lint test build --all --parallel",
    "check:affected": "pnpm exec nx affected -t lint test build --parallel",
    "packagr:tools": "ng-packagr -p ./projects/tools/ng-package.json && cd ./dist/tools && npm pack && npm publish",
    "storybook": "nx run @rt/tools:storybook",
    "build-storybook": "nx run @rt/tools:build-storybook",
    "graph": "pnpx nx dep-graph",
    "changelog:tools": "conventional-changelog -p angular -i projects/tools/CHANGELOG.md -s -k projects/tools/package.json",
    "prepare": "husky",
    "postinstall": "rimraf .angular .nx",
    "preinstall": "npx only-allow pnpm"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Eyhenij/rt-tools"
  },
  "keywords": [
    "Angular",
    "Tools",
    "UI-Kit",
    "Utils"
  ],
  "license": "Apache-2.0",
  "workspaces": [
    "projects/tools"
  ],
  "dependencies": {
    "@floating-ui/dom": "^1.6.13",
    "ngx-image-cropper": "^9.1.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.3",
    "@angular-devkit/core": "^19.2.3",
    "@angular-devkit/schematics": "^19.2.3",
    "@angular-eslint/builder": "^19.2.1",
    "@angular-eslint/eslint-plugin": "^19.2.1",
    "@angular-eslint/eslint-plugin-template": "^19.2.1",
    "@angular-eslint/schematics": "^19.2.1",
    "@angular-eslint/template-parser": "^19.2.1",
    "@angular/animations": "^19.2.2",
    "@angular/cdk": "^19.2.3",
    "@angular/cli": "^19.2.3",
    "@angular/common": "^19.2.2",
    "@angular/compiler": "^19.2.2",
    "@angular/compiler-cli": "^19.2.2",
    "@angular/core": "^19.2.2",
    "@angular/forms": "^19.2.2",
    "@angular/material": "^19.2.3",
    "@angular/platform-browser": "^19.2.2",
    "@angular/platform-browser-dynamic": "^19.2.2",
    "@angular/router": "^19.2.2",
    "@chromatic-com/storybook": "^3.2.6",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-angular": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@faker-js/faker": "^9.6.0",
    "@nx/angular": "20.6.0",
    "@nx/eslint-plugin": "^20.6.0",
    "@nx/jest": "20.6.0",
    "@nx/workspace": "20.6.0",
    "@schematics/angular": "^19.2.3",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/angular": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "conventional-changelog-cli": "^5.0.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-html": "^8.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "^14.5.3",
    "lint-staged": "^15.5.0",
    "ng-packagr": "^19.2.0",
    "nx": "20.6.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "storybook": "^8.4.7",
    "stylelint": "^16.16.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.11.1",
    "ts-jest": "^29.2.6",
    "tslib": "^2.8.1",
    "typescript": "5.7.3",
    "zone.js": "^0.15.0"
  },
  "lint-staged": {
    "**/src/**/*.{js,ts}": "eslint --fix",
    "**/src/**/*.{js,ts,json,mdx,md,html,scss,css}": "prettier . --write"
  },
  "packageManager": "pnpm@10.6.3",
  "engines": {
    "node": ">=22.12.0"
  }
}
